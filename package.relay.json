{
  "name": "play-platform-master-relay",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "test": "echo 'no tests yet!' && exit 0",
    "docker-dev": "nodemon ./app.js",
    "build": "npm run build:portal && npm run build:relay",
    "build:relay": "tsc",
    "build:portal": "npm run clean:build && better-npm-run build",
    "start-ts": "ts-node ./app.ts",
    "start": "better-npm-run start",
    "start-password": "USE_PASSWORD=true ts-node ./app.ts",
    "start-hosting": "HOSTING_PROVIDER=true ts-node ./app.ts",
    "prod": "cp config/app.json dist/config/app.json && cp config/config.json dist/config/config.json && env NODE_ENV=production node dist/app.js",
    "dev": "cp config/app.json dist/config/app.json && cp config/config.json dist/config/config.json && env NODE_ENV=development node dist/app.js",
    "tsc": "rm -rf dist/ && tsc && cp -r public dist/public",
    "clean:build": "better-npm-run clean:build",
    "inspect": "rm -rf dist/ && tsc && cp -r public dist/public && node --inspect ./dist/app.js",
    "build-binaries": "rm -rf dist/ && tsc && cp config/app.json dist/config/app.json && cp config/config.json dist/config/config.json && pkg . --target node12-alpine-x64,node12-macos-x64 --out-path binaries",
    "start-ecs": "cp postcss.config.js dist/postcss.config.js && cp -r tools dist/tools && cp config/app.json dist/config/app.json && cp config/config.json dist/config/config.json && export NODE_ENV=production && node --max-old-space-size=2048 dist/app.js"
  },
  "betterScripts": {
    "start": {
      "command": "ts-node --files ./app.portal.ts",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production"
      }
    },
    "build": {
      "command": "webpack --progress --hide-modules --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "dev": {
      "command": "nodemon --exec node --inspect -r ts-node/register  ./index.ts",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000,
        "TS_NODE_FILES": true
      }
    },
    "inspect": {
      "command": "node -r ts-node/register --inspect index.ts",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 8443,
        "TS_NODE_FILES": true
      }
    },
    "start:dev": {
      "command": "ts-node --files ./index.ts",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORTAL_PORT": 8080
      }
    },
    "analyze": {
      "command": "webpack --progress --hide-modules --config ./tools/webpack/config.babel.js",
      "env": {
        "NODE_ENV": "analyze"
      }
    },
    "lint:js": {
      "command": "eslint --fix ./src ./tools ./index.js"
    },
    "lint:style": {
      "command": "stylelint --fix \"./src/**/*.scss\""
    },
    "flow": {
      "command": "flow"
    },
    "flow:stop": {
      "command": "flow stop"
    },
    "test": {
      "command": "jest --coverage",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "clean:build": {
      "command": "rm -rf ./public/assets"
    },
    "clean:test": {
      "command": "rm -rf ./coverage"
    },
    "coveralls": {
      "command": "cat ./coverage/lcov.info | coveralls"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage"
        }
      ],
      "@babel/preset-flow"
    ],
    "plugins": [
      "loadable-components/babel",
      "dynamic-import-node",
      "lodash"
    ],
    "env": {
      "production": {
        "plugins": [
          "transform-remove-console"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "plugin:lodash-fp/recommended",
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "lodash-fp",
      "react",
      "prettier"
    ],
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./tools/webpack/config.babel.js"
        }
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true
    },
    "rules": {
      "global-require": "off",
      "no-console": "off",
      "no-underscore-dangle": "off",
      "function-paren-newline": "off",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "specialLink": [
            "to"
          ]
        }
      ],
      "lodash-fp/use-fp": "off",
      "lodash-fp/consistent-name": "off",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ]
    },
    "globals": {
      "__CLIENT__": true,
      "__SERVER__": true,
      "__DEV__": true
    }
  },
  "eslintIgnore": [
    "tools/flow"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recommended-scss",
      "./node_modules/prettier-stylelint/config.js"
    ],
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "string-quotes": "single",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global",
            "local"
          ]
        }
      ]
    }
  },
